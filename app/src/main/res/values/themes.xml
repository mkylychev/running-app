<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Ghasla" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="colorAccent">@color/blue</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Button: Orange -->
    <style name="ButtonBlue">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/selector_button_blue_text</item>
        <item name="backgroundTint">@color/selector_button_blue_background</item>
        <item name="cornerRadius">25dp</item>
        <item name="elevation">8dp</item>
    </style>
</resources>