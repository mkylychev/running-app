<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Ghasla" parent="Theme.MaterialComponents.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="colorAccent">@color/teal_200</item>
        <!-- Customize your theme here. -->
        <!-- StatusBar -->
        <item name="android:statusBarColor">@color/blue</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Toolbar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Button: Blue -->
    <style name="ButtonBlue">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/selector_button_white_text</item>
        <item name="backgroundTint">@color/selector_button_blue_background</item>
        <item name="cornerRadius">25dp</item>
        <item name="elevation">8dp</item>
    </style>

    <!-- Ripple Round: Background -->
    <style name="RippleRoundBackground">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    </style>
</resources>